@model ManageRoles.ViewModels.DeThiViewModel
@{
	ViewBag.Title = "Create Đề thi";
	Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}


<div class="panel panel-default">
	<div class="panel-heading">Tạo môn thi</div>
	<div class="panel-body">
		@if (TempData["MessageCreateUsers"] != null)
		{
			<div class="alert alert-danger alert-dismissible">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<strong>Message!</strong> @TempData["MessageCreateUsers"]
			</div>
		}
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="row">
				<div class="col-lg-4">
					@Html.Label("Mã đề thi", htmlAttributes: new { @class = "control-label manadatory" })
					@Html.TextBoxFor(model => model.MaDeThi, new { @class = "form-control", @maxlength = 40, @onkeypress = "return onlyspecchar(event);", @readonly = "readonly" })
					@Html.ValidationMessageFor(model => model.MaDeThi, "", new { @class = "text-danger" })
				</div>
				<div class="col-lg-4">
					@Html.Label("Tên đề thi", htmlAttributes: new { @class = "control-label manadatory" })
					@Html.TextBoxFor(model => model.TenDeThi, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.TenDeThi, "", new { @class = "text-danger" })
				</div>
		
				<div class="col-lg-4">
						@Html.Label("Môn thi", htmlAttributes: new { @class = "control-label manadatory" })
						@Html.DropDownListFor(model => model.IDMonThi, new SelectList(Model.ListMonThi, "ID", "TenMonThi"), new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.IDMonThi, "", new { @class = "text-danger" })
				</div>
			
			</div>

			<br />
			<div class="row">
				<div class="col-lg-4">
					<input type="submit" value="Tạo đề thi" class="btn btn-success" />
					
				</div>
			</div>
		}
	</div>
</div>
