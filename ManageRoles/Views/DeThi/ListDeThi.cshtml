@{
	Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<meta name="viewport" content="width=device-width" />
<title>Index</title>
<link href="~/Scripts/JqueryUI/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Scripts/jtable/themes/metro/lightgray/jtable.min.css" rel="stylesheet" />

<!--Adding jquery Plugin-->
<script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
<!--Adding jTable Plugin-->
<script src="~/Scripts/jtable/jquery.jtable.min.js"></script>
<!-- Import CSS file for validation engine (in Head section of HTML) -->
<link href="~/Scripts/validationEngine/validationEngine.jquery.css" rel="stylesheet" type="text/css" />

<script>
$(document).ready(function () {
	$('#DeThiContainer').jtable({
            title: 'Danh sách đề thi',
            paging: true,
            pageSize: 10,
            sorting: true,
            actions:
            {
				listAction: '/DeThi/ListDeThi',
				deleteAction: '/DeThi/RemoveDeThi'
            },
            fields: {
                ID: {
                    key: true,
                    list: false
                },
				MaDeThi: {
                    title: 'Mã đề thi',
                    width: '20%'
                },
				MaDeThi: {
                    title: 'Tên đề thi',
                    width: '25%'
                },
                Status: {
                    title: 'Trạng thái',
                    width: '12%',
                    type: 'checkbox',
                    values: { 'false': 'Deactivate', 'true': 'Active' },
                    defaultValue: 'true'
                }
            }
        });

        //Re-load records when user click 'load records' button.
        $('#BtnSearch').click(function (e) {
            e.preventDefault();
			$('#DeThiContainer').jtable('load', {
                username: $('#username').val()
            });
        });

        //Load Customer data from server
		$('#DeThiContainer').jtable('load');
    });</script>
<script src="~/Scripts/ValidationScript/ViewRoles.js"></script>

<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<form id="form">
				<div class="col-lg-4">
					<label>Tìm đề thi</label>
					<input type="text" class="form-control" id="username" name="username" />
				</div>
				<div class="col-lg-4" style="margin-top: 25px">
					<button type="submit" class="btn btn-default" id="BtnSearch">Tìm đề thi</button>
				</div>
			</form>
		</div>
		<hr />
		<div class="row">
			<div class="col-lg-12"></div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div id="DeThiContainer"></div>
			</div>
		</div>
	</div>
</div>


